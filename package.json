{
  "name": "$NAME",
  "description": "$DESCRIPTION",
  "version": "0.0.0",
  "dependencies": {},
  "scripts": {
    "lint": "xo './!(node_modules|test)/**' *",
    "inspect": "jsinspect",
    "posttest": "npm run lint && npm run inspect",
    "test": "ava",
    "test-cov": "nyc ava",
    "posttest-cov": "npm run posttest",
    "test-ci": "npm run test-cov",
    "posttest-ci": "nyc report --reporter=text-lcov | coveralls"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Jordan Klassen <forivall@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.15.1",
    "coveralls": "^2.11.9",
    "jsinspect": "^0.8.0",
    "nyc": "^6.4.4",
    "xo": "^0.15.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/$NAME.git"
  },
  "xo": {
    "space": 2,
    "rules": {
      "curly": [
        2,
        "multi-line",
        "consistent"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "eqeqeq": [
        2,
        "smart"
      ],
      "no-eq-null": [
        0
      ],
      "no-use-before-define": [
        1
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "esnext": true,
        "semicolon": false
      }
    ]
  }
}
